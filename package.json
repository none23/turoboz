{
  "name": "turoboz",
  "version": "0.0.1",
  "description": "Garmoniya Uyuta website",
  "main": "gulpfile.js",
  "dependencies": {
    "autoprefixer": "latest",
    "caniuse-db": "^1.0.30000466",
    "coffee-script": "latest",
    "http-server": "latest",
    "jade": "latest",
    "jade-cli": "latest",
    "jshint": "latest",
    "live-reload": "latest",
    "modernizr": "^3.3.1",
    "postcss-cli": "latest",
    "uglify-js": "latest",
    "watch": "latest",
    "webfontloader": "^1.6.24",
    "autoprefixer": "latest",
    "caniuse-db": "^1.0.30000466",
    "coffee-script": "latest",
    "critical": "^0.7.3",
    "cssnano-cli": "^1.0.4",
    "csso": "^2.1.1",
    "gulp": "^3.9.1",
    "gulp-imagemin": "^3.0.1",
    "imagemagick": "^0.1.3",
    "jade": "latest",
    "jade-cli": "latest",
    "jshint": "latest",
    "live-reload": "latest",
    "modernizr": "^3.3.1",
    "normalize.css": "^4.1.1",
    "postcss-cli": "latest",
    "stylus": "^0.54.5",
    "uglify-js": "latest",
    "watch": "latest"
  },
  "devDependencies": {
  },
  "scripts": {
    "build": "npm run build:jade && npm run build:styles && npm run build:scripts && npm run build:jekyll",
        "build:jade": "npm run build:jade:includes && npm run build:jade:layouts",
            "build:jade:layouts": "jade -o _layouts/  _jadefiles/layouts/*.jade",
            "build:jade:includes": "jade -o _includes/  _jadefiles/includes/*.jade",

        "build:styles": "npm run build:styles:compile && npm run build:styles:prefix",
            "build:styles:compile": "stylus _styles/styles --out _styles/unprefixed",
            "build:styles:prefix": "(cd _styles/unprefixed && for file in *.css; do (postcss --use autoprefixer -b 'ie >= 9, > 1%, last 2 versions, ios >= 7' < $file   | csso > ../../css/$file); done)", 

        "build:scripts": "npm run build:scripts:compile && npm run build:scripts:uglify",
            "build:scripts:compile": "coffee -c -o js _scripts/_site.coffee",
            "build:scripts:uglify": "uglifyjs -c -m -o js/site.js js/_site.js",
            "long_build:scripts:compile": "(cd _scripts && for file in *; do (cat $file/*.coffee | coffee --compile  --stdio > ../js/$file.js); done)",
            "long_build:scripts:uglify": "(cd js && for file in *; do (uglifyjs -c -m -o $file $file); done)",

        "build:jekyll": "jekyll build",

    "watch": "npm run watch:jekyll -s & npm run watch:jade -s & npm run watch:styles & npm run watch:scripts & npm run browser-sync",
        "prewatch": "npm run build",

        "watch:jekyll": "jekyll build --watch --incremental",

        "watch:jade": "npm run watch:jade:includes & npm run watch:jade:layouts",
            "watch:jade:layouts": "jade -o _layouts/ -w _jadefiles/layouts/*.jade",
            "watch:jade:includes": "jade -o _includes/ -w  _jadefiles/includes/*.jade",

        "watch:styles": "npm run watch:styles:compile & npm run watch:styles:prefix",
            "watch:styles:compile": "stylus -w _styles/styles --out _styles/unprefixed",
            "watch:styles:prefix": "watch 'npm run build:styles:prefix' _styles/unprefixed", 

        "watch:scripts": "watch 'npm run build:scripts' _scripts",
        "broken_watch:scripts": "watch 'npm run watch:scripts:compile' _scripts",
            "watch:scripts:compile": "coffee --stdio --compile _scripts/_site.coffee > js/site.js",

        "browser-sync": "browser-sync start --server '_site' --port 3000 --files '_site/*/*' --no-open --no-notify"
  },
  "author": "none23",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/none23/turoboz.git"
  },
  "bugs": {
    "url": "https://github.com/none23/turoboz/issues"
  },
  "homepage": "https://github.com/none23/turoboz#readme"
}
