    .tours_nav
        margin-top: 2.5rem

    .tours_list
        margin-top: 3.5rem

    .tours__count
        top: 4rem

@media(max-width: 899px)
    .tours__wrap
        display: block

    .tours_nav__wrap
        margin-bottom: 0
        padding-bottom: 1rem

    .tours_nav
        margin-top: 0

