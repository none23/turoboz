@require '../stylusfiles/vars.styl'
html
body
    font-size: 16px
    font-family: $the_font
    font-weight: 300
    line-height: 1.5

h1
h2
h3
h4
h5
h6
    font-weight: 100

th
    font-weight: 300

p
li
a
    font-size: 1rem

input
textarea
    font-size: 1rem

button
    font-size: 1.1rem

.page_heading
.section_header
    font-size: 1.4rem
    line-height: 1
    text-align: center
    text-transform: uppercase

.page_heading--404
    line-height: 2

.phone
    font-size: 1.1rem

#mobile_nav
    .site_header__phone
    .site_header__call-back
        line-height: 3rem
        text-align: center

.site_header__phone
    font-size: 1.1rem

.site_header__call-back
    font-size: 0.9rem
    line-height: 2.3

.footer-contact
    text-align: center

.footer-corner-box
    text-align: right

.site-developer
.site-developer__link
    font-size: 0.7rem

.block--textual > p
.block--textimg > p
    hyphens: auto
    text-align: justify

    @media(max-width: 1100px)
        text-align: left

.full-post__description > p
.full-vkpost__description > p
    hyphens: auto
    text-align: justify

    @media(max-width: 1100px)
        text-align: left

.heading__title
    font-size: 2rem
    line-height: 1.3

    @media(max-width: 500px)
        font-size: 1.4rem

.heading__subtitle
    font-size: 1.6rem
    line-height: 1.6

    @media(max-width: 500px)
        font-size: 1.2rem

.tour__title
    font-size: 1.1rem

.tour__length
    font-size: 0.9rem

.heading__details__value
    font-size: 1.1rem

.heading__details__label
.heading__details__category
    font-size: 1rem
    font-style: italic

.site_heading
    font-size: 1.6rem

    @media(max-width: 739px)
        font-size: 1.4rem

.card__date
    font-size: 0.9rem

.card__title
    font-size: 1.2rem

.card__summary
    font-size: 1rem

.testimonial__name
    font-size: 1.1rem
    line-height: 1rem

.testimonial__text
    font-style: italic
    line-height: 1.7
    text-align: justify

.breadcrumb__label
    font-size: 1rem

    @media(max-width: 500px)
        font-size: 0.8rem

.tours_nav__link
    text-align: right
    text-transform: uppercase
    line-height: 1

.guide__resume
    text-align: justify
    hyphens: auto

.business-info
    line-height: 2

