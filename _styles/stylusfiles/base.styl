html,
body
    position relative
    line-height 1.5
    overflow-y visible
    overflow-x hidden
    color textFG
    background beige

.page_content
    max-width 40rem
    margin: 2rem auto
    background: white
    padding: 5rem
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: flex-start
    align-items: flex-start

.page_heading
    flex: 0 0 100%

section
    margin: 2rem 0
    width: 100%

.section_header
    margin: 2rem 0

.phone
    color: $site_contacts_phone_fg


h1, h2, h3, h4, h5, h6, p
    margin 0

a
    text-decoration: none

img
    margin 0
    padding 0
    border none

ul
    margin 0
    padding 0
    list-style none

input,
select,
textarea
    border-color beige
    border-radius 2px
    margin 1rem
    padding-right 0
    padding-left 1rem
    border-width 0
    border-style none

button 
    appearance none
    border none
