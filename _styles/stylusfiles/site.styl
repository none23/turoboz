// logo_effects keyframes {{{
@keyframes logo_animate_gray
    0%
        transform: rotate(0deg) scale(1)
    25%
        transform: rotate(180deg) scale(1.01)
    50%
        transform: rotate(359deg) scale(1)
    75%
        transform: rotate(540deg) scale(1.01)
    100%
        transform: rotate(720deg) scale(1)
        fill: darken($turbo_gray, 30%)

@keyframes logo_animate_blue
    0%
        fill: $turbo_blue
    25%
        fill: $turbo_darkbrown
    50%
        fill: $turbo_blue
    75%
        fill: $turbo_darkbrown
    100%
        fill: $turbo_blue

@keyframes logo_animate_blue_2
    0%
        fill: $turbo_blue
    17%
        fill: $turbo_darkblue
    33%
        fill: $turbo_darkbrown
    50%
        fill: $turbo_brown
    67%
        fill: $turbo_darkbrown
    84%
        fill: $turbo_darkblue
    100%
        fill: $turbo_blue

@keyframes logo_animate_brown
    0%
        fill: $turbo_brown
    25%
        fill: $turbo_darkblue
    50%
        fill: $turbo_brown
    75%
        fill: $turbo_darkblue
    100%
        fill: $turbo_brown

@keyframes logo_animate_brown_2
    0%
        fill: $turbo_brown
    17%
        fill: $turbo_darkbrown
    33%
        fill: $turbo_darkblue
    50%
        fill: $turbo_blue
    67%
        fill: $turbo_darkblue
    84%
        fill: $turbo_darkbrown
    100%
        fill: $turbo_brown

@keyframes form_button_submit
