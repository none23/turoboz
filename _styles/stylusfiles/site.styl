// tours {{{
// =========================================================================
.tours__wrap
    width: 100%
    display: flex
    flex-direction: row
    justify-content: space-between
    align-items: stretch
    flex-wrap: nowrap

.tours_nav__wrap
    flex: 0 0 350px
    position: relative
    background: white

.tours_nav
    position: absolute
    top: 5rem
    right: 0
    width: auto
    bottom: 0
    display: flex
    flex-direction: column
    justify-content: flex-start
    align-items: stretch
    z-index: 500
    transition: all 0.4s ease-in-out
    will-change: transform
    overflow: hidden
    transform: translateX(20%)
    background: white

    &.pushed_aside 
        transform: translateX(-50%)

    &.hidden 
        z-index: 600
        transform: translateX(-205%)

#tours_nav--primary
    left: 0
    transform: translateX(0)

.tours_nav__link
    text-align: right
    padding: 1rem 1.5rem
    text-transform: uppercase
    background: white
    color: $turbo_darkbrown

    &:hover
        background: $turbo_blue
        color: white

    &:active
    &.active
        background: $turbo_brown
        color: white

.tours_nav__link--back
    align-self: center
    height: 4rem
    width: @height
    margin: 1rem

