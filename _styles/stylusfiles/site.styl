// tours {{{
// =========================================================================
.tours__wrap
    width: 100%
    display: flex
    flex-direction: row
    justify-content: space-between
    align-items: stretch
    flex-wrap: nowrap

// tours_nav {{{
// ------------------------------------------------------------------------
.tours_nav__wrap
    flex: 0 0 16rem
    position: relative
    margin-top: -4.4rem
    overflow: hidden
    //--to offset site_footer margin--//
    margin-bottom: -2rem 
    min-height: calc(100vh - 10rem)
    background: $turbo_verylightblue
    box-shadow: 6px -3px 12px -10px $shadowy, inset 0px 6px 12px -10px $shadowy

.tours_nav__wrap
    .section_header
        font-size: 1.3rem

.tours_nav
    position: absolute
    top: 4.4rem + 3.3rem
    right: 0
    left: 0
    width: auto
    bottom: 0
    display: flex
    flex-direction: column
    justify-content: flex-start
    align-items: stretch
    z-index: 500
    transition: all 0.4s ease-in-out
    will-change: transform
    //transform: translateX(20%)
    background: $turbo_verylightblue

    &.minified
        .tours_nav__link
            z-index: 400


#tours_nav--primary
    top: 4.4rem


.tours_nav__link
    text-align: right
    padding: 1rem 1.5rem
    text-transform: uppercase
    color: $turbo_darkbrown

    &:hover
    &:focus
        background: $turbo_blue

    &:active
    &.active
        background: $turbo_brown

    &:hover
    &:focus
    &:active
    &.active
        color: white

    &.active
        order: -1
        z-index: 500

.tours_nav__link--back
    align-self: center
    height: 4rem
    width: @height
    margin: 0
    padding: 0.51rem 50%
    margin:  0 auto
    fill: white
    background-color: $turbo_brown
    transition: all 0.3s ease-in-out

    &:hover
    &:focus
        transform: translateX(-7%)
        fill: $turbo_blue

    &:active
        transform: translateX(-20%)
        fill: $turbo_darkblue

// /tours_nav }}}
// tours_list {{{
// ------------------------------------------------------------------------
.tours__list__wrap
    flex: 1 0 20rem

.tours__list
    display: flex
    flex-direction: row
    justify-content: center
    align-items: stretch
    flex-wrap: wrap
    margin: 0 $tour_card_width * 0.5 0 0

.tour__wrap
    flex 0 0 $tour_card_width
    height: $tour_card_height
    position: relative
    z-index: 5
    margin: 0.1rem
    transition: all 0.3s ease-in-out
    will-change: transform
    transform: scale(0.963)

    &:hover
    &:focus
    &:active
        z-index: 1001
        transform: scale(1)

.tour__fixed
.tour__moving
    position: absolute
    top: 0
    left: 0
    bottom: 0 
    display: flex
    flex-direction: column
    justify-content: space-between
    align-items: stretch
    flex-wrap: nowrap
    border: 0.063rem solid $turbo_lightblue
    border-radius: 0.125rem
    transition: all 0.3s ease-in-out
    will-change: transform
    background: white

    .tour__wrap:hover &
    .tour__wrap:focus &
    .tour__wrap:active &
        border-width: 0.08rem
        border-color: $turbo_blue

.tour__moving
    right: -25%
    z-index: 10
    border-left: none
    overflow-y: scroll
    //box-shadow: inset 0 -10px 20px -10px $shadowy 
    background: $turbo_verylightblue
    transform-origin: 0% 0%
    transform: scaleX(0.8)

    .tour__wrap:hover &
    .tour__wrap:focus &
    .tour__wrap:active &
        z-index: 1010
        transform: scaleX(1) translateX(20%)


.tour__fixed
    right: 0
    z-index: 20

    .tour__wrap:hover &
    .tour__wrap:focus &
    .tour__wrap:active &
        z-index: 1020
        transform: translateX(-75%)

.tour__image__wrap
    flex: 0 0 50% 
    overflow: hidden

.tour__image
    width: 100%
    height: 100%
    filter: grayscale(0.5) contrast(75%) opacity(.9)

    .tour__wrap:hover &
    .tour__wrap:focus &
    .tour__wrap:active &
        filter: none

.tour__link
    flex 0 0 2.5rem
    line-height: 2.5rem
    border-top: 0.060rem solid $turbo_lightblue
    background: white
    border-radius: 0

    .tour__wrap:hover &
    .tour__wrap:focus &
        background: $turbo_blue
        color: white

        &:hover
        &:focus
            background: $turbo_darkblue
        &:active
            background: $turbo_brown

.tour__length
    color: $turbo_darkblue
    margin-bottom: 1rem

.tour__intro
.tour__summary
.tour__length
    padding: 0 1.0rem 
    margin-top: 1rem

// /tours_list }}}

