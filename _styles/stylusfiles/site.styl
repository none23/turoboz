$modal_form_button_fg = white

// /vars }}}
// base {{{
// =========================================================================
html,
body
    position: relative
    line-height: 1.5
    overflow-y: visible
    overflow-x: hidden
    color: $body_fg
    background: $body_bg

.page_content
    max-width: 40rem
    margin: 2rem auto
    background: white
    padding: 3rem 5rem 1rem
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: flex-start
    align-items: flex-start

.page_heading
    flex: 0 0 100%

section
    margin: 2rem 0 0
    width: 100%

.section_header
    margin: 0 0 2rem

.phone
    color: $site_contacts_phone_fg

h1, h2, h3, h4, h5, h6, p
    margin: 0

a
    text-decoration: none

img
    margin: 0
    padding: 0
    border: none

ul
    margin: 0
    padding: 0
    list-style: none

input,
select,
textarea
    border-color beige
    border-radius 2px
    margin 1rem
    padding-right 0
    padding-left 1rem
    border-width 0
    border-style none

button 
    appearance none
    border none
// /base }}}
// typography {{{
// =========================================================================

html,
body
    font-size: 17px
    font-family: $the_font
    font-weight: normal
    line-height: 1.5 

h1, h2, h3, h4, h5, h6
    line-height: 1.5
    font-weight: 300

p, li, a 
    line-height: 1.5
    font-size: 1rem

a
    text-decoration: none

input,
select,
textarea
    font-size: 1.1rem
    font-weight: 300

.phone
    font-size: 1.2rem

.page_heading,
.section_header
    h1,h2,h3,h4,h5,h6
        font-size: 2rem

button
    line-height: 1.2
    appearance: none
    
    &:active,
    &:focus
        border: none

.textlink
    line-height: 2.5
    font-style: italic

// /typography }}}
// site_header {{{
// =========================================================================
#site_header
    position: relative
    width: 100%
    height: $site_header_height 
    display: flex
    flex-direction: row
    justify-content: space-between
    align-items: center
    z-index: 1000
    background: $site_nav_bg 

// logo {{{
// ------------------------------------------------------------------------
#site_logo
    flex: 0 0 $site_header_logo_width
    height: $site_header_logo_height
    position: relative
    color: transparent
    z-index: 1001

#site_logo__icon
    position: absolute
    height: 100%
    width: 100%
    
// /logo }}}
// site_nav {{{
// ------------------------------------------------------------------------
.site_nav__link
    padding: 0.5rem
    white-space: nowrap
    color: $site_nav_link_fg
    background: $site_nav_link_bg
    transition: all 0.1s ease-in-out
    
    &.active
        color: $site_nav_link_bg
        background: $site_nav_link_fg

    &:hover,
    &:focus
        color: $site_nav_link_hover_fg
        background: $site_nav_link_hover_bg

// desktop_nav {{{
#desktop_nav 
    flex: 1 0 26rem
    height: 100%
    display: flex
    flex-direction: row
    justify-content: space-around
    align-items: stretch

    .site_nav__link
        padding-top: $site_header_height - 2.3rem


// /desktop_nav }}}
// mobile_nav {{{
#mobile_nav
    display: none
    position: absolute
    left: $site_header_logo_width
    right: 0
    top: $site_header_height
    padding: 2rem 0 1rem
    z-index: 999
    flex-direction: column
    justify-content: space-around
    align-items: center
    background: $mobile_nav_bg
    transform: translateY(-200%)
    will-change: transform
    transition: transform 0.5s ease-in-out

    .site_nav__link
        width: 97%

        &:active
            width: 100%

    &.is_open
        transform: translateY(0)

// /mobile_nav }}}
// mobile_nav_toggle {{{
.mobile_nav_toggle__svg
    transition: all 0.5s ease-in-out
    fill: hsl(23, 47%, 26%)

.mobile_nav_toggle__svg__top_bar
    transform-origin: 0 0

.mobile_nav_toggle__svg__mid_bar
    transform-origin: 50% 50%

.mobile_nav_toggle__svg__bot_bar
    transform-origin: 0 100%

#mobile_nav_toggle
    display: none
    position: relative
    flex: 0 0 3rem
    margin: 1rem 2rem
    order: 1
    z-index: 1001

    &.is_open
        .mobile_nav_toggle__svg__top_bar
            transform: translateX(10%) rotate(45deg)

        .mobile_nav_toggle__svg__mid_bar
            transform: rotateY(90deg)

        .mobile_nav_toggle__svg__bot_bar
            transform: translateX(10%) rotate(-45deg)

// /mobile_nav_toggle }}}
@media(max-width: 58rem)
    #desktop_nav 
        display: none

    #mobile_nav_toggle
        display: block

    #mobile_nav
        display: flex

// /site_nav }}}
