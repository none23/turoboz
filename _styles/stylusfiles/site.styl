// modal_forms {{{
// -------------------------------------------------------------------------
.modal_form__wrap
    position: fixed
    top: 0
    right: 0
    bottom: 0
    left: 0
    background: hsla(0,0,0,0.5)
    transform: translateX(-100%)
    z-index: 2000

    &.is_open
        transform: translateX(0)

.modal_form__body
    min-width: $modal_form_body_min_width
    width: $modal_form_body_width
    margin: 2rem auto
    border-radius: 4px
    background: $modal_form_bg
    
.modal_form__header
    position: relative
    text-align: center
    font-size: 1.3rem
    height: 3em

.modal_form__close
    position: absolute
    right: 0
    top: 0
    font-size: 2rem
    line-height: 1
    padding: 0.5rem
    color: $modal_form_close_fg

.modal_form__input_group, 
.modal_form__button
    width: 90%
    margin: 0.5rem auto

