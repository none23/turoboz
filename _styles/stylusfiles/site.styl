// vars {{{
// =========================================================================
$site_header_height = 6rem
$site_header_logo_width = 14rem
$site_header_logo_height = 5.25rem
$site_header_contacts_width = 13rem

$site_footer_height = 8rem
$site_footer_icon_width = 3rem

$modal_form_body_min_width = 18rem
$modal_form_body_width = 50vw


$the_font = Ubuntu, Arial, Helvetica, sans-serif
$body_fg = black
$body_bg = beige


$turbo_brown = hsl(23, 47%, 26%)
$turbo_darkbrown = hsl(23, 50%, 18%)
$turbo_blue = hsl(198, 53%, 43%)
$turbo_gray = hsl(30, 1%, 44%)
$shadowy = hsl(0, 0, 0, 0.4)

$section_header_fg = $turbo_brown

$site_nav_bg = white
$mobile_nav_bg = white
$site_nav_link_fg = $turbo_brown
$site_nav_link_bg = white
$site_nav_link_hover_fg = white
$site_nav_link_hover_bg = $turbo_blue

$main_heading_bg = hsla(0, 0%, 100%, 0.8)
$main_heading_fg = $turbo_darkbrown
$news_section_bg = hsl(198, 13%, 92%)
$news_section_fg = $turbo_darkbrown

$site_contacts_phone_fg = $turbo_brown
$site_contacts_modal_opener_bg = $turbo_brown
$site_contacts_modal_opener_fg = white

$site_footer_bg = $turbo_brown
$site_footer_fg  = white
$site_footer_icons_fg = white

$modal_form_bg = wheat
$modal_form_close_fg = maroon
$modal_form_button_bg = $turbo_blue
$modal_form_button_fg = white

// /vars }}}
// base {{{
// =========================================================================
body
    overflow-y: visible
    overflow-x: hidden
    width: 100vw
    height: auto

.page_wrap
    min-height: 100vh
    display: flex
    flex-direction: column
    justify-content: space-between
    align-items: stretch
    color: $body_fg
    background: $body_bg

section
    margin: 0
    width: 100%

.page_heading
    flex: 0 0 100%

.section_header
    font-size: 1.6rem
    margin: 1rem 0
    text-align: center
    text-transform: uppercase
    color: $section_header_fg

h1
h2
h3
h4
h5
h6
    margin: 0

a
    color: $body_fg
    text-decoration: none

img
    margin: 0
    padding: 0
    border: none

ul
    margin: 0
    padding: 0
    list-style: none

input
select
textarea
    border-radius: 2px
    margin: 1rem
    padding-right: 0
    padding-left: 1rem
    border: none

button
    appearance none
    border none

// /base }}}
// typography {{{
// =========================================================================

html
body
    font-size: 18px
    font-family: $the_font
    font-weight: normal
    line-height: 1.5 

h1
h2
h3
h4
h5
h6
    font-weight: 100

p
li
a 
    font-size: 1rem

input
select
textarea
    font-size: 1.1rem

.phone
    font-size: 1.2rem

// /typography }}}
// site_header {{{
// =========================================================================
#site_header
    height: $site_header_height 
    flex: 0 0 @height
    display: flex
    flex-direction: row
    justify-content: space-between
    align-items: flex-start
    background: $site_nav_bg 
    box-shadow: 0 0 12px -4px $shadowy

// logo {{{
// ------------------------------------------------------------------------
#site_logo
    flex: 0 0 $site_header_logo_width
    height: $site_header_logo_height
    margin: ($site_header_height - $site_header_logo_height) * 0.5
    position: relative
    z-index: 1001
    color: transparent

#site_logo__icon
    position: absolute
    height: 100%
    width: 100%
    
// /logo }}}
// contacts_box {{{
// ------------------------------------------------------------------------
#site_contacts_wrap
    flex: 0 0 $site_header_contacts_width 
    position: relative
    height: $site_header_height - 1.5rem
    margin: 0.5rem 1.5rem 0.5rem 1rem
    z-index: 1001
    display: flex
    flex-direction: column
    justify-content: flex-end
    align-items: flex-end
    align-content: space-between
    flex-wrap: wrap

.site_header__phone
.site_header__call_back
    flex: 0 0 2rem

.site_header__phone
    font-size: 1.2rem
    margin-bottom: .4rem
    color: $site_contacts_phone_fg

.site_header__call_back
    font-size: 0.875rem
    line-height: 2.3
    color: $site_contacts_modal_opener_fg
    background: $site_contacts_modal_opener_bg
    padding: 0 0.7rem
    border-radius: 2px

.site_header__vk_button
    height: 3rem
    width: @height
    flex: 0 0 @height
    fill: $turbo_blue

// /contacts_box }}}
// site_nav {{{
// ------------------------------------------------------------------------
.site_nav__link
    padding: 0.5rem
    white-space: nowrap
    color: $site_nav_link_fg
    background: $site_nav_link_bg
    transition: all 0.1s ease-in-out
    
    &.active
        color: $site_nav_link_bg
        background: $site_nav_link_fg

    &:hover
    &:focus
        color: $site_nav_link_hover_fg
        background: $site_nav_link_hover_bg

    &:hover
    &:focus
    &.active
        box-shadow: 0 1px 3px -1px $shadowy
        

// desktop_nav {{{
#desktop_nav 
    flex: 1 0 20rem
    height: 100%
    display: flex
    flex-direction: row
    justify-content: space-around
    align-items: stretch
    margin 0 1rem

    .site_nav__link
        padding-top: $site_header_height - 2.3rem


// /desktop_nav }}}
// mobile_nav {{{
#mobile_nav
    display: none
    position: absolute
    right: 0
    left: calc(100% - 300px)
    top: $site_header_height
    border-radius: 0 0 2px 2px
    z-index: 999
    flex-direction: column
    justify-content: space-around
    align-items: flex-start
    background: $mobile_nav_bg
    transform: translateY(-200%)
    will-change: transform
    transition: transform 0.5s ease-in-out
    box-shadow: 0 1px 14px -4px $shadowy

    .site_header__phone,
    .site_header__call_back
        width: 100%
        height: 3rem
        line-height: 3rem
        text-align: center
        margin: 0

    .site_header__phone
        margin-top: 2rem
        border-top: 1px solid $site_contacts_phone_fg

    .site_header__vk_button
        height: 2.8rem
        fill: white
        background: $turbo_blue
        padding: 0.1rem calc((300px - 2.8rem) * 0.5)

    .site_header__phone,
    .site_header__call_back,
    .site_header__vk_button
        display: none

    .site_nav__link
        width: 100%

        &:active
            width: 100%

    &.is_open
        transform: translateY(0)

// /mobile_nav }}}
// mobile_nav_toggle {{{
.mobile_nav_toggle__svg
    transition: all 0.5s ease-in-out
    fill: $turbo_brown

.mobile_nav_toggle__svg__top_bar
    transform-origin: 0 0

.mobile_nav_toggle__svg__mid_bar
    transform-origin: 50% 50%

.mobile_nav_toggle__svg__bot_bar
    transform-origin: 0 100%

#mobile_nav_toggle
    display: none
    position: relative
    flex: 0 0 3rem
    margin: 1.7rem 2rem
    order: 1
    z-index: 1001

    &.is_open
        .mobile_nav_toggle__svg__top_bar
            transform: translateX(10%) rotate(45deg)

        .mobile_nav_toggle__svg__mid_bar
            transform: rotateY(90deg)

        .mobile_nav_toggle__svg__bot_bar
            transform: translateX(10%) rotate(-45deg)

// /mobile_nav_toggle }}}
@media(max-width: 1090px)
    #desktop_nav
        display: none

    #mobile_nav_toggle
        display: block

    #mobile_nav
        display: flex


@media(max-width: 790px)
    #site_contacts_wrap
        display: none

    #mobile_nav
        .site_header__phone,
        .site_header__call_back,
        .site_header__vk_button
            display: block

@media(max-width: 410px)
    #site_logo
        flex 0 0 60vw
        
