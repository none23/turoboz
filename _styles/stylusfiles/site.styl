// site_header {{{
// =========================================================================
#site_header
    height: $site_header_height 
    flex: 0 0 @height
    position: relative
    display: flex
    flex-direction: row
    justify-content: space-between
    align-items: flex-start
    background-image: url(/img/noise.png) 
    background-blend-mode: lighten
    background-color: $site_nav_bg 
    background-repeat: repeat
    box-shadow: 0 0 0.75rem -0.25rem $shadowy
    border-bottom: 0.063rem solid $turbo_lightblue
    z-index: 700

// logo {{{
// ------------------------------------------------------------------------
#site_logo
    flex: 0 0 $site_header_logo_width
    height: $site_header_logo_height
    margin: ($site_header_height - $site_header_logo_height) * 0.5
    position: relative
    z-index: 1001
    color: transparent

    .logo_gray
        fill: $turbo_gray

    .logo_brown
        fill: $turbo_brown

    .logo_blue
        fill: $turbo_blue

#site_logo
    &:hover
    &:focus
        outline: none !important
        .logo_gray
        .logo_brown
        .logo_blue
            animation-duration: 1s
            animation-timing-function: ease-out
            animation-iteration-count: infinite

        .logo_gray
            transform-origin: 1.52rem 1.50rem
            animation-name: logo_animate_gray
        .logo_brown
            animation-name: logo_animate_brown
        .logo_blue
            animation-name: logo_animate_blue

#site_logo__icon
    position: absolute
    height: 100%
    width: 100%
    
// /logo }}}
// contacts_box {{{
// ------------------------------------------------------------------------
#site_contacts_wrap
    flex: 0 0 $site_header_contacts_width 
    position: relative
    height: $site_header_height - 1.5rem
    margin: 0.5rem 1.5rem 0.5rem 1rem
    z-index: 1001
    display: flex
    flex-direction: column
    justify-content: flex-end
    align-items: flex-end
    align-content: space-between
    flex-wrap: wrap

.site_header__phone
.site_header__call_back
    flex: 0 0 2rem

.site_header__phone
    font-size: 1.1rem
    margin-bottom: .4rem
    color: $site_contacts_phone_fg

.site_header__vk_button
    height: 3rem
    width: @height
    flex: 0 0 @height
    fill: $turbo_blue
    margin-left: 1rem

.site_header__call_back
    font-size: 0.9rem
    line-height: 2.3
    color: $site_contacts_modal_opener_fg
    background: $site_contacts_modal_opener_bg
    padding: 0 0.7rem
    border-radius: 0.125rem
    border-radius: $border-radius
    transition: all 0.2s ease-in-out

    &:hover
    &:focus
        color: $site_nav_link_hover_fg
        background: $site_nav_link_hover_bg

    &:active
        color: $site_nav_link_hover_fg
        background: $site_nav_link_fg

    &.is_open
        color: white
        background: $site_nav_link_hover_bg
        opacity: .4

// /contacts_box }}}
// header_form {{{
// ------------------------------------------------------------------------
.header_form__wrap
    position: absolute
    top: 100%
    right: 0
    transform: rotateY(90deg) 
    transform-origin: 100% 0
    transition: transform 0.2s ease-out
    z-index: 1002
    background: $header_form_bg
    box-shadow: 0 0.25rem 0.75rem -0.325rem $shadowy
    border: $border
    border-radius: 0.1875rem
    border-radius: $border-radius * 1.5

    &.is_open
        transform: rotateY(0)

    #call_back_form
        justify-content: flex-start
        flex-direction: row
        flex-wrap: wrap
        max-width: $header_form_field_width * 2 + 2rem + 6rem
        margin-right: -1rem

    #call_back_form__name
    #call_back_form__phone
        order: 0
        flex: 2 2 $header_form_field_width

    #call_back_form__button
        order: 2
        flex: 4 4  $header_form_field_width * 2
        margin: 0

        &:hover
        &:focus
            color: white
            background: $turbo_blue
        &:active
            color: @background
            background: $turbo_brown

    #call_back_form__cancel_button
        order: 1
        flex: 1 0 3rem
        background: white
        color: $turbo_blue
        border-left: $border
        border-radius: 0
        -webkit-appearance: none
        margin: 0 
        padding: 1.1rem 2rem 1.1rem 1rem

        &:hover
        &:focus
            color: white
            background: $turbo_cancel
        &:active
            color: white
            background: $turbo_cancel_active

        @media(max-width: 648px)
            border: none


// /header_form }}}
// site_nav {{{
// ------------------------------------------------------------------------
.site_nav__link
    padding: 0.5rem
    white-space: nowrap
    color: $site_nav_link_fg
    transition: all 0.1s ease-in-out
    
    &.active
        color: white
        background: $site_nav_link_fg

    &:hover
    &:focus
        color: $site_nav_link_hover_fg
        background: $site_nav_link_hover_bg
        

// desktop_nav {{{
#desktop_nav 
    flex: 1 0 20rem
    height: 100%
    display: flex
    flex-direction: row
    justify-content: space-around
    align-items: stretch
    margin 0 1rem

    .site_nav__link
        padding-top: $site_header_height - 2.3rem


// /desktop_nav }}}
// mobile_nav {{{
#mobile_nav
    display: none
    position: absolute
    right: 0
    left: calc(100% - 18.75rem)
    top: $site_header_height
    border-radius: 0 0 $border-radius $border-radius
    z-index: 999
    flex-direction: column
    justify-content: space-around
    align-items: flex-start
    background: $mobile_nav_bg
    transform: rotateY(90deg)
    transform-origin: 100% 0
    will-change: transform
    transition: transform 0.2s ease-out
    box-shadow: 0 0.063rem 0.875rem -0.25rem $shadowy

    .site_header__phone,
    .site_header__call_back
        width: 100%
        height: 3rem
        min-height: 3rem
        line-height: 3rem
        text-align: center
        margin: 0

    .site_header__phone
        margin-top: 2rem
        border-top: 0.063rem solid $site_contacts_phone_fg

    .site_header__vk_button
        height: 2.8rem
        fill: white
        background: $turbo_blue
        padding: 0.1rem 7.975rem

    .site_header__phone,
    .site_header__call_back,
    .site_header__vk_button
        display: none

    .site_nav__link
        width: 100%

        &:active
            width: 100%

    &.is_open
        transform: rotateY(0)

// /mobile_nav }}}
// mobile_nav_toggle {{{
.mobile_nav_toggle__svg
    transition: all 0.3s ease-out
    fill: $turbo_brown

.mobile_nav_toggle__svg__top_bar
    transform-origin: 0 0

.mobile_nav_toggle__svg__mid_bar
    transform-origin: 50% 50%

.mobile_nav_toggle__svg__bot_bar
    transform-origin: 0 100%

#mobile_nav_toggle
    display: none
    position: relative
    flex: 0 0 3rem
    padding: 1.7rem 2rem
    order: 1
    z-index: 1001

    &.is_open
        .mobile_nav_toggle__svg__top_bar
            transform: translateX(10%) rotate(45deg)

        .mobile_nav_toggle__svg__mid_bar
            transform: rotateY(90deg)

        .mobile_nav_toggle__svg__bot_bar
            transform: translateX(10%) rotate(-45deg)

// /mobile_nav_toggle }}}
@media(max-width: 964px)
    #desktop_nav
        display: none

    #mobile_nav_toggle
        display: block

    #mobile_nav
        display: flex


@media(max-width: 600px)
    #site_contacts_wrap
