// vars {{{
// =========================================================================
$site_header_height = 6rem
$site_header_logo_width = 14rem
$site_header_logo_height = 5.25rem
$site_header_contacts_width = 13rem
$header_form_field_width = 17rem

$site_footer_height = 8rem
$site_footer_icon_width = 3rem



$the_font = Ubuntu, Arial, Helvetica, sans-serif
$body_fg = black
$body_bg = beige


$turbo_brown = hsl(23, 47%, 26%)
$turbo_darkbrown = hsl(23, 50%, 18%)
$turbo_darkblue = hsl(198, 53%, 32%)
$turbo_blue = hsl(198, 53%, 43%)
$turbo_lightblue = hsl(198, 53%, 75%)
$turbo_verylightblue = hsl(198, 13%, 92%)
$turbo_gray = hsl(30, 1%, 44%)
$shadowy = hsl(0, 0, 20%, 0.5)

$section_header_fg = $turbo_brown

$site_nav_bg = white
$mobile_nav_bg = white
$site_nav_link_fg = $turbo_brown
$site_nav_link_bg = white
$site_nav_link_hover_fg = white
$site_nav_link_hover_bg = $turbo_blue
$header_form_bg = white

$main_heading_bg = hsla(0, 0%, 100%, 0.8)
$main_heading_fg = $turbo_darkbrown
$news_section_bg = $turbo_verylightblue
$news_section_fg = $turbo_darkbrown

$site_contacts_phone_fg = $turbo_brown
$site_contacts_modal_opener_bg = $turbo_brown
$site_contacts_modal_opener_fg = white

$site_footer_bg = $turbo_brown
$site_footer_fg  = white
$site_footer_icons_fg = white

$modal_form_bg = wheat
$modal_form_close_fg = maroon
$modal_form_button_bg = $turbo_blue
$modal_form_button_fg = white

// /vars }}}
// base {{{
// =========================================================================
html
body
    width: 100vw
    max-width: 100vw

body
    overflow-y: visible
    overflow-x: hidden
    height: auto

section
    margin: 0
    width: 100%

h1
h2
h3
h4
h5
h6
    margin: 0

a
    color: $body_fg
    text-decoration: none

img
    margin: 0
    padding: 0
    border: none

ul
    margin: 0
    padding: 0
    list-style: none

input
select
textarea
    border-radius: 2px
    margin: 1rem
    padding-right: 0
    padding-left: 1rem
    border: none

button
    appearance none
    border none
    border-radius: 2px

// typography {{{
// ------------------------------------------------------------------------
html
body
    font-size: 18px
    font-family: $the_font
    font-weight: 300
    line-height: 1.5 

h1
h2
h3
h4
h5
h6
    font-weight: 100

p
li
a 
    font-size: 1rem

input
select
textarea
    font-size: 1.1rem

.phone
    font-size: 1.2rem

// /typography }}}
// /base }}}
// site_header {{{
// =========================================================================
#site_header
    height: $site_header_height 
    flex: 0 0 @height
    position: relative
    display: flex
    flex-direction: row
    justify-content: space-between
    align-items: flex-start
    background: $site_nav_bg 
    box-shadow: 0 0 12px -4px $shadowy
    border-bottom: 1px solid $turbo_lightblue

// logo {{{
// ------------------------------------------------------------------------
#site_logo
    flex: 0 0 $site_header_logo_width
    height: $site_header_logo_height
    margin: ($site_header_height - $site_header_logo_height) * 0.5
    position: relative
    z-index: 1001
    color: transparent

#site_logo__icon
    position: absolute
    height: 100%
    width: 100%
    
// /logo }}}
// contacts_box {{{
// ------------------------------------------------------------------------
#site_contacts_wrap
    flex: 0 0 $site_header_contacts_width 
    position: relative
    height: $site_header_height - 1.5rem
    margin: 0.5rem 1.5rem 0.5rem 1rem
    z-index: 1001
    display: flex
    flex-direction: column
    justify-content: flex-end
    align-items: flex-end
    align-content: space-between
    flex-wrap: wrap

.site_header__phone
.site_header__call_back
    flex: 0 0 2rem

.site_header__phone
    font-size: 1.2rem
    margin-bottom: .4rem
    color: $site_contacts_phone_fg

.site_header__vk_button
    height: 3rem
    width: @height
    flex: 0 0 @height
    fill: $turbo_blue

.site_header__call_back
    font-size: 0.875rem
    line-height: 2.3
    color: $site_contacts_modal_opener_fg
    background: $site_contacts_modal_opener_bg
    padding: 0 0.7rem
    border-radius: 2px
    transition: all 0.2s ease-in-out

    &:hover
    &:focus
        color: $site_nav_link_hover_fg
        background: $site_nav_link_hover_bg

    &:active
        color: $site_nav_link_hover_fg
        background: $site_nav_link_fg

    &.is_open
        color: white
        background: $site_nav_link_hover_bg
        opacity: .4

// /contacts_box }}}
// header_form {{{
// ------------------------------------------------------------------------
.header_form__wrap
    position: absolute
    top: 100%
    right: 0
    transform: translateX(100%)
    transition: all 0.3s ease-in-out
    z-index: 1000
    background: $header_form_bg
    box-shadow: 0 4px 12px -6px $shadowy
    border: 1px solid $turbo_lightblue
    border-radius: 3px

    &.is_open
        transform: translateX(0%)

    #call_back_form
        justify-content: space-around
        flex-direction: row
        flex-wrap: wrap

    #call_back_form__name
    #call_back_form__phone
        flex: 1 1 $header_form_field_width

    #call_back_form__button
        flex: 2 2  $header_form_field_width * 2
        margin: 0

// /header_form }}}
// site_nav {{{
// ------------------------------------------------------------------------
.site_nav__link
    padding: 0.5rem
    white-space: nowrap
    color: $site_nav_link_fg
    background: $site_nav_link_bg
    transition: all 0.1s ease-in-out
    
    &.active
        color: $site_nav_link_bg
        background: $site_nav_link_fg

    &:hover
    &:focus
        color: $site_nav_link_hover_fg
        background: $site_nav_link_hover_bg

    &:hover
    &:focus
    &.active
        box-shadow: 0 1px 3px -1px $shadowy
        

// desktop_nav {{{
#desktop_nav 
    flex: 1 0 20rem
    height: 100%
    display: flex
    flex-direction: row
    justify-content: space-around
    align-items: stretch
    margin 0 1rem

    .site_nav__link
        padding-top: $site_header_height - 2.3rem


// /desktop_nav }}}
// mobile_nav {{{
#mobile_nav
    display: none
    position: absolute
    right: 0
    left: calc(100% - 300px)
    top: $site_header_height
    border-radius: 0 0 2px 2px
    z-index: 999
    flex-direction: column
    justify-content: space-around
    align-items: flex-start
    background: $mobile_nav_bg
    transform: translateY(-200%)
    will-change: transform
    transition: transform 0.5s ease-in-out
    box-shadow: 0 1px 14px -4px $shadowy

    .site_header__phone,
    .site_header__call_back
        width: 100%
        height: 3rem
        line-height: 3rem
        text-align: center
        margin: 0

    .site_header__phone
        margin-top: 2rem
        border-top: 1px solid $site_contacts_phone_fg

    .site_header__vk_button
        height: 2.8rem
        fill: white
        background: $turbo_blue
        padding: 0.1rem calc((300px - 2.8rem) * 0.5)

    .site_header__phone,
    .site_header__call_back,
    .site_header__vk_button
        display: none

    .site_nav__link
        width: 100%

        &:active
            width: 100%

    &.is_open
        transform: translateY(0)

// /mobile_nav }}}
// mobile_nav_toggle {{{
.mobile_nav_toggle__svg
    transition: all 0.5s ease-in-out
    fill: $turbo_brown

.mobile_nav_toggle__svg__top_bar
    transform-origin: 0 0

.mobile_nav_toggle__svg__mid_bar
    transform-origin: 50% 50%

.mobile_nav_toggle__svg__bot_bar
    transform-origin: 0 100%

#mobile_nav_toggle
    display: none
    position: relative
    flex: 0 0 3rem
    margin: 1.7rem 2rem
    order: 1
    z-index: 1001

    &.is_open
        .mobile_nav_toggle__svg__top_bar
            transform: translateX(10%) rotate(45deg)

        .mobile_nav_toggle__svg__mid_bar
            transform: rotateY(90deg)

        .mobile_nav_toggle__svg__bot_bar
            transform: translateX(10%) rotate(-45deg)

// /mobile_nav_toggle }}}
@media(max-width: 1090px)
    #desktop_nav
        display: none

    #mobile_nav_toggle
        display: block

    #mobile_nav
        display: flex


@media(max-width: 790px)
    #site_contacts_wrap
        display: none

    #mobile_nav
        .site_header__phone,
        .site_header__call_back,
        .site_header__vk_button
            display: block

@media(max-width: 410px)
    #site_logo
        flex 0 0 60vw
        
// /site_nav }}}
// /site_header }}}
// site_wide {{{
// =========================================================================
.page_wrap
    min-height: 100vh
    display: flex
    flex-direction: column
    justify-content: space-between
    align-items: stretch
    color: $body_fg
    background: $body_bg

.page_heading
    flex: 0 0 100%

.page_heading
.section_header
    font-size: 1.6rem
    margin: 1rem 0
    text-align: center
    text-transform: uppercase
    color: $section_header_fg

.services__wrap
.testimonials__wrap
.about__wrap
.contacts__wrap
.contact_form__wrap
.review_form__wrap
    width: 85vw
    max-width: 900px
    min-width: 500px
    margin: 1rem auto

    @media(max-width: 600px)
        width: 95vw
        max-width: auto
        min-width: auto

    @media(max-width: 480px)
        width: 100vw

// forms {{{
// ------------------------------------------------------------------------
.form
    width: 100%

.form__field
    outline: 1px solid $turbo_lightblue
    border-radius: 2px
    .form__input_group &
        width: (100% - 2rem)
        margin: 0.5rem 0 1rem 

.hidden_field
    display: nane

.form__input_label
    margin: 0 

.form__button--success
.form__button--loading
.form__button--failure
.form__button
    width: 100%
    margin: 1rem 0 
    padding: 0.75rem
    color: white
    border-radius: 2px

.form__button
    background: $turbo_blue

.form__button--success
    background: hsl(120,90%,15%)

.form__button--loading
    background: $turbo_blue

.form__button--failure
    background: hsl(0,90%,20%)

// /forms }}}
// /site_wide }}}
// main {{{
// =========================================================================
// first_glance {{{
// ------------------------------------------------------------------------
.first_glance
    width: 100% 
    display: flex
    flex-direction: row
    justify-content: space-between
    align-items: stretch
    align-content: flex-start
    flex-wrap: wrap

// heading {{{
.main__heading__section
    flex: 3 0 40rem
    min-height: 420px
    display: flex
    flex-direction: row
    justify-content: center
    align-items: center
    flex-wrap: nowrap
    background-image: url(/img/main_bg.jpg)
    //background-size: 100% 100%
    background-size: cover
    background-position: top right
    background-repeat: no-repeat

.main__heading__wrap
    flex: 0 1 38rem 
    background: $main_heading_bg
    margin: 2rem

.main__heading
    color: $main_heading_fg
    font-size: 1.6rem
    padding: 2rem 3rem 3rem
    

// /heading }}}
// news {{{
.news__section
    flex: 1 0 20rem
    background: $news_section_bg

    .section_header
        font-size: 1.4rem

.news__list
    margin: 0 1rem 2rem 2rem

.news__list__item
    margin: 0 0 1rem

.news__list__item__link
    color: $news_section_fg

// /news }}}

// /first_glance }}}
// upcoming_events {{{
// ------------------------------------------------------------------------
.posts__wrap
.upcoming_events__wrap
    width: 90vw
    max-width: 1100px
    min-width: 500px
    margin: 1rem auto

.upcoming_events__list
    display: flex
    flex-direction: row
    flex-wrap: nowrap
    justify-content: center
    align-items: stretch

.event__wrap
    flex: 1 0 14rem
    border: 1px solid $turbo_blue
    margin: 1rem 5px
    position: relative
    z-index: 20
    background: white
    will-change: transform
    transition: all 0.2s ease

    &:active
        transform: scale(0.95)
        z-index: 30

.event__link
    width: 100%
    height: 100%
    display: flex
    flex-direction: column
    justify-content: space-between
    align-items: stretch

.event__header
.event__title
    flex: 1 1 50%
    
.event__subtitle
    display: inline

.event__title
    padding: 0.8rem 0.8rem 1.6rem
    color: $turbo_darkbrown

.event__date
.event__title
.event__footer
    padding-left: 0.8rem

.event__image
    width: 100%
    height: auto
    filter: grayscale(40%) contrast(80%)
    transition: all 0.1s linear

    .event__wrap:hover &
    .event__wrap:focus &
        filter: none

    .event__wrap:active &
        filter: invert(80%)

.event__date
    padding-top: 0.8rem
    line-height: 1
    font-size: 0.8rem
    color: $turbo_darkblue

.event__footer
    flex: 0 0 2.4rem
    line-height: 2.4rem
    text-transform: uppercase
    font-size: 0.9rem
    background: $turbo_blue
    color: white

// /upcoming_events }}}
