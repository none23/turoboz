// =========================================================================
#site_footer
    display: flex
    flex-direction: row
    justify-content: space-between
    align-items: flex-end
    flex-wrap: wrap
    background: $site_footer_bg 
    color: $site_footer_fg 
    margin-top: 2rem

.f__contact,
.f__corner_box
    margin: 1rem 
    flex 1 0 13.5rem

.f__contact
    text-align: center
    margin: 1rem 0.5rem
    color: $site_footer_fg 
    fill: @color

    &:hover,
    &:focus
        color: $turbo_blue
        fill: @color

.f__contact_icon
    height: $site_footer_icon_width
    width: @height
    margin: 0 auto 1rem

.f__corner_box
    text-align: right
    padding-right: 1rem

#f__developer,
#f__developer__link
    font-size: 0.7rem 

#f__developer__link
    color: $turbo_blue

