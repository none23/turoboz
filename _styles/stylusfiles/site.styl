// testimonials {{{
// =========================================================================
.testimonial
    width: 100%
    position: relative
    margin: 0 0 2rem
    border-radius: 2px
    border: 1px solid $turbo_lightblue
    background: white

    &:last-child
        margin-bottom: 0

.testimonial__text__wrap
    margin: 3rem 4rem
    position: relative
    z-index: 100

    @media(max-width: 800px)
        margin: 3rem 3rem

    @media(max-width: 480px)
        margin: 3rem 2rem 3rem 1rem

.testimonial__text
    //text-align: justify
    font-style: italic
    line-height: 1.7
    color: $turbo_brown

.testimonial__svg__wrap
    position: absolute
    top: 1rem
    left: 1rem
    width: 9rem
    height: auto
    z-index: 99

.testimonial__svg__path
    fill: $turbo_lightblue

.testimonial__footer
    background: $turbo_blue
    padding: .7rem 2rem
    display: flex
    justify-content: space-between
    align-items: center

.testimonial__name
    font-size: 1.2rem
    line-height: 1rem
    text-align: right

    &:before
        content: '—  '

.testimonial__date
.testimonial__name
    display: inline
    white-space: nowrap
    color: white

// /testimonials }}}
