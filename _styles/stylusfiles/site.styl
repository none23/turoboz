        transform: translateX(-50%)

    &.hidden 
        z-index: 600
        transform: translateX(-205%)

#tours_nav--primary
    left: 0
    transform: translateX(0)

.tours_nav__link
    text-align: right
    padding: 1rem 1.5rem
    text-transform: uppercase
    background: white
    color: $turbo_darkbrown

    &:hover
        background: $turbo_blue
        color: white

    &:active
    &.active
        background: $turbo_brown
        color: white

.tours_nav__link--back
    align-self: center
    height: 4rem
    width: @height
    margin: 1rem

