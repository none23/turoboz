include ../mixins.jade
section.blog__wrap#blog__wrap
    h2.section_header
        | Блог
    ul.blog
        | {% assign vkposts = site.vk_news | sort: 'dateposted' %}
        | {% for post in vkposts reversed %}
        li.blog__post__wrap
            .blog__post__image__wrap
                img.blog__post__image( src="{{ post.image }}", alt="{{ post.intro | smartify }}")
            a.blog__post__content__wrap(href='{{ post.url }}')
                .blog__post__date
                    +LiquidRussianDateLite('post.dateposted')

                h3.blog__post__intro
                    | {{ post.intro | smartify }}

                footer.blog__post__footer
                    | Читать далее

        | {% endfor %}
