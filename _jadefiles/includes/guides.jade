mixin GuideCard(g)
        .guide__wrap.card__wrap
            .guide__card
                .card__image__wrap
                    img.card__image(src='/img/{{ #{g}.photo }}', alt='{{ #{g}.name }}')

                h3.guide__name.card__title
                    | {{ #{g}.name }}

                .guide__resume.card__summary
                    | {% for paragraph in #{g}.resume %}
                    p.guide__resume__p
                        | {{ paragraph | markdownify }}
                    | {% endfor %}

                a.guide__link.guide__link--page.card__button(href='{{ #{g}.page_link.url }}')
                    | {{ #{g}.page_link.copy }}

section.about__wrap.guides__wrap
    h2.section_header
        | Наши экскурсоводы
    .guides
        | {% if page.guides | first >= '' %}
        | {% for g in page.guides %}
        +GuideCard('g')
        | {% endfor %}
        | {% else %}
        +GuideCard('page.guide')
        | {% endif %}

